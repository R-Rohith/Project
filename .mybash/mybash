	"2")
		cd ~/Tutorials
#		time o2-practice-slfr2 -b --aod-file AO2D.root
		time o2-practice-slfr2 $option | o2-analysis-event-selection $option | o2-analysis-track-propagation $option | o2-analysis-timestamp $option | o2-analysis-trackselection $option
		root AnalysisResults.root
